rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Match any file in a memorial's folder
    match /memorials/{memorialId}/{allPaths=**} {
      // Allow anyone to read images for public memorial pages
      allow read: if true;
      
      // Allow authenticated users to upload.
      // Firestore rules will ensure only owners can link these images to a memorial.
      allow write: if request.auth != null;
    }
  }
}
