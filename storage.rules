rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all memorial images
    match /memorials/{memorialId}/{allPaths=**} {
      allow read;
    }

    // Only allow authenticated users to write to the memorials folder
    // And ensure they are uploading to a path that corresponds to a memorial document they own.
    match /memorials/{memorialId}/{imageId} {
      allow write: if request.auth != null && 
                     exists(/databases/$(database)/documents/memorials/$(memorialId)) &&
                     resource.size < 5 * 1024 * 1024 && // 5MB limit
                     resource.contentType.matches('image/.*') &&
                     get(/databases/$(database)/documents/memorials/$(memorialId)).data.userId == request.auth.uid;
    }
  }
}
