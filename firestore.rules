rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Memorials are public to read, but can only be created, updated, or deleted
    // by the user who created them.
    match /memorials/{memorialId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // User data can only be accessed by the authenticated user themselves.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
