rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Match any file in the 'memorials' directory
    match /memorials/{memorialId}/{allPaths=**} {
      
      // Anyone can read images.
      allow read: if true;

      // Only authenticated users can upload (write) images.
      // The Firestore rules will handle ensuring that a user can only associate
      // images with memorials they own. This rule prevents unauthenticated uploads.
      allow write: if request.auth != null;
    }
  }
}
